{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "displayName": "Common",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
            }
        },
        {
            "name": "Debug",
            "hidden": true,
            "inherits": "common",
            "description": "Default build using Ninja generator",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "hidden": true,
            "inherits": "common",
            "binaryDir": "${sourceDir}/build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "RelWithDebInfo",
            "hidden": true,
            "inherits": "common",
            "binaryDir": "${sourceDir}/build/RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "llvm-dbg",
            "displayName": "LLVM - Debug",
            "description": "Build for LLVM",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-toolchain.cmake"
            }
        },
        {
            "name": "llvm-rel",
            "displayName": "LLVM - Release",
            "description": "Build for LLVM",
            "inherits": "Release",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-toolchain.cmake"
            }
        },
        {
            "name": "llvm-relwithdebinfo",
            "displayName": "LLVM - RelWithDebInfo",
            "description": "Build for LLVM",
            "inherits": "RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-toolchain.cmake"
            }
        },
        {
            "name": "windows",
            "displayName": "Windows",
            "description": "Build for Windows",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/windows",
            "toolchainFile": "${sourceDir}/cmake/msvc-toolchain.cmake",
            "cacheVariables": {
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "llvm-debug",
            "configurePreset": "llvm-dbg"
        },
        {
            "name": "llvm-release",
            "configurePreset": "llvm-rel"
        },
        {
            "name": "llvm-relwithdebinfo",
            "configurePreset": "llvm-relwithdebinfo"
        }
    ]
}